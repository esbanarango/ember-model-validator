<div class="ui masthead vertical segment">
  <div class="ui container">
    <div class="introduction">
      <h1 class="ui header">
        Match
        <div class="sub header">
          Validates the attribute's value by testing whether it matches another attribute.
        </div>
      </h1>
      <div class="ui hidden divider"></div>
    </div>
  </div>
</div>

<div class="ui main container">
  <p>
    <h3>Specific Options</h3>
    <ul>
      <li>A<code class="ui label">String</code>. The name of the attribute to match with (Alias for <code class="ui label">attr</code>).</li>
      <li><code class="ui label">attr</code>. Attribute to match (only needed when using custom message).</li>
    </ul>
    {{! template-lint-disable block-indentation }}
    <UiAnnotation @showing={{true}} @type="javascript">
validations = {
  email: {
    match: "confirmationEmail"
  },
  password: {
    match: {
      attr: "passwordConfirmation",
      message: "sup, it is not the same!"
    }
  }
};
    </UiAnnotation>
    {{! template-lint-enable }}
  </p>

  <ConfigOptions @defaultMessage={{messages.matchMessage}} />

  <UiExample @header="Examples" as |showing setCopyCode|>

    <UiHtml @showing={{showing}}>
      <div class="ui two column grid">
        <div class="column">

          <ObjectForm @for={{model}} @classNames="segment">
            <div class="fields">
              <div class="field">
                <FormField @for="email" @label="Email" @required={{true}} @icon="mail">
                  <Input @value={{model.email}} placeholder="Email" @autocomplete="off" />
                </FormField>
              </div>
              <div class="field">
                <FormField @for="confirmationEmail" @label="Confirmation Email" @required={{true}} @icon="mail">
                  <Input @value={{model.confirmationEmail}} placeholder="Confirmation Email" />
                </FormField>
              </div>
            </div>
            <div class="fields">
              <div class="field">
                <FormField @for="password" @label="Password" @required={{true}} @icon="asterisk">
                  <Input @type="password" @value={{model.password}} placeholder="Password" @autocomplete="off" />
                </FormField>
              </div>
              <div class="field">
                <FormField @for="passwordConfirmation" @label="Password Confirmation" @required={{true}} @icon="asterisk">
                  <Input @type="password" @value={{model.passwordConfirmation}} placeholder="Password Confirmation" />
                </FormField>
              </div>
            </div>
            <div class="actions">
              <div class="ui input submit">
                <button class="ui button primary mr-10" {{action "validate"}}>Validate</button>
                <button class="ui button reset" {{action "reset"}}>Reset</button>
              </div>
            </div>
          </ObjectForm>

        </div>
        <div class="column">
          <div class="ui segment">
            <ModelErrorsToJson @errors={{model.errors}} @modelName={{modelName}} />
          </div>
        </div>
      </div>
    </UiHtml>
    {{! template-lint-disable block-indentation }}
    <UiAnnotation @showing={{showing}} @type="javascript" @setCopyCode={{setCopyCode}}>
import Model from 'ember-data/model';
import attr from 'ember-data/attr';
import Validator from 'ember-model-validator/decorators/model-validator';

@Validator
class MyModel extends Model {
  @attr('boolean') email;
  @attr('boolean') confirmationEmail;
  @attr('boolean') password;
  @attr('boolean') passwordConfirmation;

  validations = {
    email: {
      match: 'confirmationEmail',
      presence: true,
    },
    password: {
      match: {
        attr: 'passwordConfirmation',
        message: 'sup, it is not the same!',
      },
      presence: true,
    },
  };
}

export default MyModel;
    </UiAnnotation>
    {{! template-lint-enable }}
  </UiExample>
</div>
