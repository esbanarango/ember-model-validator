<div class="ui masthead vertical segment">
  <div class="ui container">
    <div class="introduction">
      <h1 class="ui header">
        ZIP Code
        <div class="sub header">
          Validates the attribute's value by testing whether it matches a valid zipcode
        </div>
      </h1>
      <div class="ui hidden divider"></div>
      <p>
        Countries supported and regular expressions used can be found in <a href="https://github.com/esbanarango/ember-model-validator/blob/master/addon/postal-codes-regex.js">postal-codes-regex.js</a>
      </p>
    </div>
  </div>
</div>

<div class="ui main container">
  <p>
    <h3>Specific Options</h3>
    <ul>
      <li><code class="ui label">countryCode</code>. The code of the country for which the postal code will be validated.</li>
    </ul>
    {{! template-lint-disable block-indentation }}
    <UiAnnotation @showing={{true}} @type="javascript">
validations = {
  postalCode: {
     // If no countryCode is specified, "US" is used as default
    zipCode: true
  }
};
    </UiAnnotation>
    <br>
    <UiAnnotation @showing={{true}} @type="javascript">
validations = {
  postalCodeUK: {
    zipCode: { countryCode: "UK" }
  }
};
    </UiAnnotation>
    {{! template-lint-enable }}
  </p>

  <ConfigOptions @defaultMessage={{messages.zipCodeMessage}} />

  <UiExample @header="Examples" as |showing setCopyCode|>
    <UiHtml @showing={{showing}}>
      <div class="ui two column grid">
        <div class="column">
          <ObjectForm @for={{model}} @classNames="segment">
            <div class="disabled  field">
              <label>Billing Address</label>
              <div class="fields">
                <div class="twelve wide field">
                  <input type="text" name="shipping[address]" placeholder="Street Address">
                </div>
                <div class="four wide field">
                  <input type="text" name="shipping[address-2]" placeholder="Apt #">
                </div>
              </div>
            </div>
            <div class="fields">
              <div class="ten wide field">
                <div class="disabled field">
                  <label>City</label>
                  <input placeholder="City" type="text" disabled="" tabindex="-1">
                </div>
              </div>
              <div class="six wide field">
                <FormField @for="postalCode" @label="Postal Code" @required={{true}}>
                  <Input @value={{model.postalCode}} placeholder="Postal Code" />
                </FormField>
              </div>
            </div>
            <div class="actions">
              <div class="ui input submit">
                <button class="ui button primary mr-10" {{action "validate"}}>Validate</button>
                <button class="ui button reset" {{action "reset"}}>Reset</button>
              </div>
            </div>
          </ObjectForm>
        </div>
        <div class="column">
          <div class="ui segment">
            <ModelErrorsToJson @errors={{model.errors}} @modelName={{modelName}} />
          </div>
        </div>
      </div>
    </UiHtml>
    {{! template-lint-disable block-indentation }}
    <UiAnnotation @showing={{showing}} @type="javascript" @setCopyCode={{setCopyCode}}>
import Model from 'ember-data/model';
import attr from 'ember-data/attr';
import Validator from 'ember-model-validator/decorators/model-validator';

@Validator
class MyModel extends Model {
  @attr('string') postalCode;

  validations = {
    postalCode: {
      zipCode: true,
    },
  };
}

export default MyModel;
    </UiAnnotation>
    {{! template-lint-enable }}
  </UiExample>
</div>
